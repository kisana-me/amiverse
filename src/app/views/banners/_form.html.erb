<%= form_with model: @banner, url: banners_path, data: { turbo: false } do |f| %>
  <%= render 'shared/error_messages', instead: @banner %>
  <br/>

  <%= f.label :banner_data %>
  <%= f.file_field :banner_data %>
  <br/>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>

  <%= f.label :render_type %>
  <%= f.select :render_type, Banner.render_types.keys.map { |i| [i.humanize, i] } %>
  <br />

  <%= f.label :sensitive %>
  <%= f.check_box :sensitive %>
  <br />

  <%= f.label :caution_message %>
  <%= f.text_field :caution_message %>
  <br/>

  <%= f.label :visibility %>
  <%= f.select :visibility, Banner.render_types.keys.map { |i| [i.humanize, i] } %>
  <br />

  <%= f.label :limiting %>
  <%= f.check_box :limiting %>
  <br />

  <%= f.submit '送信' %>
<% end %>