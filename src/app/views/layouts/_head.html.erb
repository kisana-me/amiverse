<meta name="keywords" content="<%= content_for?(:keywords) ? yield(:keywords) : 'amiverse' %>">
<meta name="description" content="<%= content_for?(:description) ? yield(:description) : Rails.application.config.x.server_property.server_description %>">
<meta name="author" content="<%= content_for?(:author) ? yield(:author) : 'amiverse' %>">

<meta name="robots" content="<%= content_for?(:robots) ? yield(:robots) : 'noindex, nofollow, noarchive' %>">
<meta property="og:title" content="<%= full_title(yield(:title)) %>">
<meta property="og:description" content="<%= content_for?(:description) ? yield(:description) : Rails.application.config.x.server_property.server_description %>">
<meta property="og:type" content="website">
<meta property="og:url" content="<%= request.url %>">
<meta property="og:image" content="<%= content_for?(:image) ? yield(:image) : full_front_url('/ast-imgs/main-img-rainbow.png') %>">
<meta name="twitter:card" content="<%= content_for?(:card) ? yield(:card) : 'summary_large_image' %>">
