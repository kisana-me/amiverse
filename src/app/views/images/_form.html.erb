<%= form_with model: @image, url: images_path, data: { turbo: false } do |f| %>
  <%= render 'shared/error_messages', instead: @image %>
  <br/>

  <%= f.label :image %>
  <%= f.file_field :image %>
  <br/>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>

  <%= f.label :render_type %>
  <%= f.select :render_type, Image.render_types.keys.map { |i| [i.humanize, i] } %>
  <br />

  <%= f.label :sensitive %>
  <%= f.check_box :sensitive %>
  <br />

  <%= f.label :caution_message %>
  <%= f.text_field :caution_message %>
  <br/>

  <%= f.label :visibility %>
  <%= f.select :visibility, Image.visibilities.keys.map { |i| [i.humanize, i] } %>
  <br />

  <%= f.label :limitation %>
  <%= f.select :limitation, Image.limitations.keys.map { |i| [i.humanize, i] } %>
  <br />

  <%= f.submit '送信' %>
<% end %>